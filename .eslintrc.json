{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "rules": {
        "@typescript-eslint/dot-notation": "error",
        "@typescript-eslint/no-var-requires": "off",
        "camelCase": "off",
        "@typescript-eslint/strict-boolean-expressions": [
            "error",
            {
                "allowNullableObject": true
            }
        ]
    }
}